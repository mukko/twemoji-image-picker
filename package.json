{
  "name": "twemoji-image-picker",
  "version": "1.0.0",
  "description": "Twitter emoji image picker on desktop",
  "main": "main.js",
  "scripts": {
    "eslint": "eslint .",
    "start": "electron .",
    "build-mac": "electron-packager . twemoji-image-picker --platform=darwin --arch=x64 --icon=icon/icon.icns --overwrite --out dist",
    "build-win": "electron-packager . twemoji-image-picker --platform=win32 --arch=x64 --icon=icon/icon.icns --overwrite --out dist"
  },
  "keywords": ["emoji", "picker", "electron"],
  "author": "Hiroaki Kikuchi (https://github.com/tinoji)",
  "license": "MIT",
  "dependencies": {
    "emoji.json": "^12.1.0",
    "electron-dl": "^1.14.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "electron": "^5.0.5",
    "electron-packager": "^14.0.0",
    "eslint-plugin-eslint-comments": "^3.1.2"
  }
}
